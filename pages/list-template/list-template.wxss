/* miniprogram/pages/list-template/list-template.wxss */

.tmpContainer {
  display: flex;
  flex-flow: column;
  margin-top: 40rpx;
}

.image-date{
  padding: 10rpx;
}

.image-date image {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.image-date text {
  font-size: 32rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
}

.picture {
  width: 100%;
  height: 400rpx;
}

.content {
  font-size: 30rpx;
  text-indent: 30rpx;
}

.up image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  padding: 8rpx;
}

.up text {
  font-size: 30rpx;
}